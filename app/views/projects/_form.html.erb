<%= simple_form_for @project do |f| %>
  <%= render 'shared/projects_error_messages' %>
  
  <%= f.input :name %>

  <%= f.input :description %>

  <%= f.input :author %>

  <%= f.input :team_members %>

  <%= f.label :progress %>
  <%= f.select :progress, options_for_select([nil, "Idea", "In Progress", "Completed"]), selected: nil  %>

  <%= f.submit %>
<% end %>
