<%= simple_form_for @resume do |f| %>
  <label> Name: </label>
  <%= f.text_field :name %>
  <label> Location: </label>
  <%= f.text_field :location %>
  <label> Phone Number: </label>
  <%= f.text_field :phone_number %>
  <label> Bio: </label>
  <%= f.text_area :biography %>
  <br/>
  <%= f.submit %>
<% end %>
<style>
  textarea {
    width: 100%;
    height: 150px;
    padding: 12px 20px;
    box-sizing: border-box;
    background-color: #3F516B;
    font-size: 16px;
    resize: none;
  }
</style>
