<h1>Edit this task</h1>
<%= simple_form_for([@project, @task]) do |f|  %>

  <%= f.input :title %>

  <%= f.input :description %>

  <%= f.select :job_type, options_for_select([nil, "Programming", "Music", "Art", "Story", "Level Design", "Puzzles", "Miscellaneous"]), selected: :job_type  %>
  <%= f.submit %>
<% end %>
