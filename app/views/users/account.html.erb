<% if user_signed_in? %>
<h2>Welcome, <%= current_user.email %>!</h2>
<p> What would you like to do now?</p>
  <br>
  <br>
  <%= link_to "New Post", new_post_path, class: "button" %>
  <%= link_to "New Project", new_project_path, class: "button" %>
<br>
<br>
<div style="background:lightgray; border-radius:5px; padding:10px;">
 Liked Posts:
  <br>
  <% Post.all.each do |post| %>
    <% if current_user.voted_up_for? post %>
      >
      <%= link_to post.title, post %>
      <br>
    <% end %>
  <% end %>
  </div>
<br>
  <div style="background:lightgray; border-radius:5px; padding:10px;">
   Current Tasks:
    <br>
    <% current_user.tasks.each do |task| %>
      >
      <%= link_to task.title, task %> ( <%= link_to task.project.name, task.project %> )
      <br>
    <% end %>
  </div>

<% end %>
<% if !user_signed_in? %>
  <%= link_to "Sign Up", new_user_registration_path, class: "button" %>
  <span> or &nbsp;&nbsp;&nbsp;</span>
  <%= link_to "Sign In!", new_user_session_path, class: "button" %>
<% end %>
